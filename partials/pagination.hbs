<nav class="pagination kg-width-normal">
  <div class="pagination-left">
    {{#if prev}}
      <a class="newer-posts button-arrow button-arrow-left" href="{{page_url prev}}">{{t 'Newer Posts'}}</a>
    {{/if}}
  </div>
  <span class="page-number hidden-xs hidden-sm">{{t 'Page {page} of {pages}' page=page pages=pages}}</span>
  <div class="pagination-right">
    {{#if next}}
      <a class="older-posts button-arrow button-arrow-right" href="{{page_url next}}">{{t 'Older Posts'}}</a>
    {{/if}}
  </div>
</nav>