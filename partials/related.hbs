{{#get "posts" limit="2" filter="tags:[{{post.tags}}]+id:-{{post.id}}" include="tags,authors" as |related|}}
    <section class="related-posts container medium">
        <h3 class="related-title">You Might Also Like...</h3>
        <div class="post-feed u-hover-wrapper">
            {{#foreach related}}
                {{> loop tag="h4"}}
            {{/foreach}}
        </div>
    </section>
{{/get}}