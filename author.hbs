{{!< default}}

<div class="content-area">
    <main class="site-main">
        <div class="term container">
            {{#author}}
                <h1 class="term-name">
                    {{#if website}}
                        <a href="{{website}}" target="_blank" rel="noopener noreferrer">{{name}}</a>
                    {{else}}
                        {{name}}
                    {{/if}}
                </h1>
                {{#if bio}}
                    <div class="term-description">{{bio}}</div>
                {{/if}}
                <div class="term-social">
                    {{#if facebook}}
                        <a class="term-social-link term-social-link-facebook"
                            href="https://www.facebook.com/{{facebook}}"
                            target="_blank" rel="noopener noreferrer">
                            <i class="icon icon-facebook"></i>
                        </a>
                    {{/if}}
                    {{#if twitter}}
                        <a class="term-social-link term-social-link-twitter"
                            href="https://twitter.com/{{twitter}}"
                            target="_blank" rel="noopener noreferrer">
                            <i class="icon icon-twitter"></i>
                        </a>
                    {{/if}}
                </div>
            {{/author}}
        </div>
        <div class="post-feed container medium u-hover-wrapper">
            {{#foreach posts}}
                {{> loop tag="h2"}}
            {{/foreach}}
        </div>
        {{pagination}}
    </main>
</div>